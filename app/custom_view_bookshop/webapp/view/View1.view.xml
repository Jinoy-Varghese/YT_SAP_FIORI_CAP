<mvc:View controllerName="customviewbookshop.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <Page id="page" title="">
		<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
			<Button id="_IDGenButton1" icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press="onCollapseExpandPress">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<Image id="_IDGenImage" src="test-resources/sap/tnt/images/SAP_Logo.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo" width="60px" height="30px">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData2" priority="NeverOverflow"/>
				</layoutData>
			</Image>
			<Title text="Product Name" wrapping="false" id="productName">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData3" priority="Disappear"/>
				</layoutData>
			</Title>
			<Text text="Second title" wrapping="false" id="secondTitle">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData4" priority="Disappear"/>
				</layoutData>
			</Text>
			<ToolbarSpacer id="_IDGenToolbarSpacer" />
			<SearchField width="25rem" id="searchField">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData5" priority="Low" group="1"/>
				</layoutData>
			</SearchField>
			<Button visible="false" icon="sap-icon://search" type="Transparent" id="searchButton" tooltip="Search"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton" press=".onFetchSalesOrderData" icon="sap-icon://da" type="Transparent" tooltip="Joule" text="Joule">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData6" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton1" icon="sap-icon://source-code" type="Transparent" tooltip="Action 1" text="Action 1">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData7" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton2" icon="sap-icon://card" type="Transparent" tooltip="Action 2" text="Action 2">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData8" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton3" icon="sap-icon://action-settings" type="Transparent" text="Settings"/>
			<Button id="_IDGenButton2" icon="sap-icon://bell" type="Transparent" tooltip="Notification">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData9" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<tnt:ToolHeaderUtilitySeparator id="_IDGenToolHeaderUtilitySeparator"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton4" icon="sap-icon://grid" type="Transparent" text="My Products" tooltip="My Products"/>
			<Avatar id="_IDGenAvatar" src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData10" priority="NeverOverflow"/>
				</layoutData>
			</Avatar>
		</tnt:ToolHeader>


        <HBox id="_IDGenHBox4" >
            <!-- side navigation -->
            <VBox id="_IDGenVBox" >
                <tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="true">
                    <tnt:NavigationList id="_IDGenNavigationList">
                        <tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Home" icon="sap-icon://home" />
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup" text="New">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Add New Books" icon="sap-icon://people-connected" press=".onAddBookPressed" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem3" text="Building" icon="sap-icon://building" >
                                <tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Office 01" />
                                <tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Office 02" />
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem id="_IDGenNavigationListItem6" text="Mileage" icon="sap-icon://mileage" >
                                <tnt:NavigationListItem id="_IDGenNavigationListItem7" text="Driven" />
                                <tnt:NavigationListItem text="Walked" id="walked" />
                            </tnt:NavigationListItem>
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup1" text="Recently used">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem8" text="View Books" icon="sap-icon://kpi-managing-my-area" press=".onViewDetailsBookPressed" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem9" text="Flight" icon="sap-icon://flight" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem10" text="Map" icon="sap-icon://map-2" />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup2" text="Restricted" enabled="false">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem11" text="Running" icon="sap-icon://physical-activity" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem12" text="Scissors" icon="sap-icon://scissors" />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem13" text="Transport" icon="sap-icon://passenger-train" />
                    </tnt:NavigationList>
                    <tnt:fixedItem>
                        <tnt:NavigationList id="_IDGenNavigationList1">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem14" text="Bar Chart" icon="sap-icon://bar-chart" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem15" selectable="false" href="https://sap.com" target="_blank" text="External Link" icon="sap-icon://attachment" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem16" text="Compare" icon="sap-icon://compare" />
                        </tnt:NavigationList>
                    </tnt:fixedItem>
                </tnt:SideNavigation>
            </VBox>
            <!-- end of side navigation -->
            <VBox id="_IDGenVBox8" >
                <!-- Panel 1 -->
                <Panel id="Panel1" width="60rem" class="sapUiResponsiveMargin" visible="false">
                    <headerToolbar>
                        <OverflowToolbar id="_IDGenOverflowToolbar">
                            <Title id="_IDGenTitle" text="Add new item"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <Breadcrumbs id="_IDGenBreadcrumbs1" currentLocationText="Add New Item">
                        <Link id="_IDGenLink" text="Home"></Link>
                    </Breadcrumbs>
                    <HBox id="_IDGenHBox" >
                        <VBox id="_IDGenVBox1" >
                            <Label id="_IDGenLabel" text="Title"></Label>
                            <Input placeholder="Enter your title" id="title"></Input>
                        </VBox>
                        <VBox id="_IDGenVBox2" >
                            <Label id="_IDGenLabel1" text="Author"></Label>
                            <Input placeholder="Enter your author" id="author"></Input>
                        </VBox>
                        <VBox id="_IDGenVBox3" >
                            <Label id="_IDGenLabel2" text="Price"></Label>
                            <Input placeholder="Enter your price" id="price"></Input>
                        </VBox>
                    </HBox>
                    <HBox id="_IDGenHBox1" >
                        <VBox id="_IDGenVBox4" >
                            <Label id="_IDGenLabel3" text="Stock"></Label>
                            <Input placeholder="Enter your stock" id="stock"></Input>
                        </VBox>
                        <VBox id="_IDGenVBox5" >
                            <Label id="_IDGenLabel4" text="Location"></Label>
                            <Input placeholder="Enter your location" id="location"></Input>
                        </VBox>
                        <VBox id="_IDGenVBox6" >
                            <Label id="_IDGenLabel5" text="Genre"></Label>
                            <Input placeholder="Enter your genre" id="genre"></Input>
                        </VBox>
                    </HBox>
                    <HBox id="_IDGenHBox2" >
                        <VBox id="_IDGenVBox7" >
                            <Button id="_IDGenButton" press="submit" text="Submit"></Button>
                        </VBox>
                    </HBox>
                </Panel>
                <!-- End of Panel 1 -->
                <!-- Panel 2 -->
                <Panel id="Panel2" visible="false" class="sapUiResponsiveMargin" width="60rem">
                   <headerToolbar>
                        <OverflowToolbar id="_IDGenerflowToolbar">
                            <Title id="_IDGenTie" text="Book Details"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <!-- Books Table -->
                    <Table id="booksTable" items="{/Books}">
                        <columns>
                            <Column id="_IDGenColumn">
                                <Text id="_IDGenText1" text="Title"/>
                            </Column>
                            <Column id="_IDGenColumn1">
                                <Text id="_IDGenText2" text="Author"/>
                            </Column>
                            <Column id="_IDGenColumn2">
                                <Text id="_IDGenText3" text="Price"/>
                            </Column>
                            <Column id="_IDGenColumn3">
                                <Text id="_IDGenText4" text="Stock"/>
                            </Column>
                            <Column id="_IDGenColumn4">
                                <Text id="_IDGenText5" text="Location"/>
                            </Column>
                            <Column id="_IDGenColumn5">
                                <Text id="_IDGenText6" text="Genre"/>
                            </Column>
                            <Column id="IDGenColumn7">
                                <Text id="IDGenText8" text="Action"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem">
                                <cells>
                                    <Text id="_IDGenText7" text="{title}"/>
                                    <Text id="_IDGenText8" text="{author}"/>
                                    <Text id="_IDGenText9" text="{price}"/>
                                    <Text id="_IDGenText10" text="{stock}"/>
                                    <Text id="_IDGenText11" text="{location}"/>
                                    <Text id="_IDGenText12" text="{genre}"/>
                                    <Button id="button1" text="..." press="onActionPressed($event)"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                </Panel>
                <!-- End of panel 2-->
                <!-- Start of panel 3 -->
                <Panel id="Panel3" width="60rem" class="sapUiResponsiveMargin" visible="false">
                    <headerToolbar>
                        <OverflowToolbar id="_IDGenOvelowToolbar">
                            <Title id="_IenTitle" text="Update item"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <Breadcrumbs id="_IDGenBrecrumbs1" currentLocationText="Update Item">
                        <Link id="_IDGeink" text="Home"></Link>
                    </Breadcrumbs>
                    <HBox id="_IDGeBox" >
                        <Input placeholder="Enter your title" id="itemCode" editable="false" visible="false"></Input>
                        <VBox id="_IDGenox1" >
                            <Label id="_IDGenLel" text="Title"></Label>
                            <Input placeholder="Enter your title" id="titleUpdate"></Input>
                        </VBox>
                        <VBox id="_IDGeBox2" >
                            <Label id="_IDGenLal1" text="Author"></Label>
                            <Input placeholder="Enter your author" id="authorUpdate"></Input>
                        </VBox>
                        <VBox id="_IDGVBox3" >
                            <Label id="_IDGenLel2" text="Price"></Label>
                            <Input placeholder="Enter your price" id="priceUpdate"></Input>
                        </VBox>
                    </HBox>
                    <HBox id="_IDGHBox1" >
                        <VBox id="_IDnVBox4" >
                            <Label id="_IDGeabel3" text="Stock"></Label>
                            <Input placeholder="Enter your stock" id="stockUpdate"></Input>
                        </VBox>
                        <VBox id="_IDGenVx5" >
                            <Label id="_IDGenLel4" text="Location"></Label>
                            <Input placeholder="Enter your location" id="locationUpdate"></Input>
                        </VBox>
                        <VBox id="_IDGenVx6" >
                            <Label id="_IDGLabel5" text="Genre"></Label>
                            <Input placeholder="Enter your genre" id="genreUpdate"></Input>
                        </VBox>
                    </HBox>
                    <HBox id="_IDGenHBo" >
                        <VBox id="_IDGenox7" >
                            <Button id="_IDGenBton" press="updateItem" text="Submit"></Button>
                        </VBox>
                    </HBox>
                </Panel>
                <!-- End of panel 3 -->
            </VBox>
        </HBox>
    </Page>
</mvc:View>